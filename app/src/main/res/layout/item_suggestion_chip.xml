<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.chip.Chip xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/suggestion_chip"
    style="@style/Widget.MaterialComponents.Chip.Entry"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:ellipsize="end"
    android:maxLines="1"
    android:paddingTop="14dp"
    android:paddingBottom="14dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:textSize="18sp"         
    android:textStyle="bold"        
    android:textColor="#FFFFFF"
    app:chipBackgroundColor="#3366CC"
    app:chipStrokeColor="#FFFFFF"
    app:chipStrokeWidth="2dp"
    app:closeIconEnabled="true"
    app:closeIconTint="#FFFFFF"
    app:closeIconSize="28dp"
    app:chipMinHeight="48dp"
    app:chipIconSize="28dp"
    app:chipCornerRadius="24dp"
    android:elevation="16dp"
    app:rippleColor="#88FFFFFF" />
