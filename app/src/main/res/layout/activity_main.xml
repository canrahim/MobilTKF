<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_surface"
    tools:context=".MainActivity">

    <!-- Toolbar with navigation controls - Dark Theme -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/toolbar_background"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/btn_menu"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/main_menu"
                android:src="@drawable/ic_menu"
                android:padding="8dp"
                android:layout_gravity="center_vertical" />
                
            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/go_back"
                android:src="@drawable/ic_back"
                android:padding="8dp"
                android:layout_gravity="center_vertical" />

            <ImageButton
                android:id="@+id/btn_forward"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/go_forward"
                android:src="@drawable/ic_forward"
                android:padding="8dp"
                android:layout_gravity="center_vertical" />

            <ImageButton
                android:id="@+id/btn_refresh"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/refresh"
                android:src="@drawable/ic_refresh"
                android:padding="8dp"
                android:layout_gravity="center_vertical" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/url_input_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_gravity="center_vertical"
                app:boxBackgroundColor="@color/dark_surface"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/ic_copy"
                app:endIconTint="@color/toolbar_icon"
                app:boxStrokeColor="@color/primary"
                app:boxStrokeWidth="0.5dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:endIconContentDescription="@string/copy_url">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/url_input"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:textColorHint="@color/text_secondary_dark"
                    android:textColor="@color/text_primary_dark"
                    android:imeOptions="actionGo"
                    android:inputType="textUri"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:textSize="14sp"
                    android:longClickable="false"
                    android:textIsSelectable="false"
                    android:gravity="start"
                    android:ellipsize="start"
                    android:singleLine="true" />
            </com.google.android.material.textfield.TextInputLayout>

            <ImageButton
                android:id="@+id/btn_main_menu"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/menu"
                android:src="@drawable/ic_menu"
                android:padding="8dp"
                android:layout_gravity="center_vertical" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.Toolbar>

    <!-- Tab strip container - Dark Theme -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tabs_container"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/tab_background"
        android:elevation="0dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tabs_recycler_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toStartOf="@id/btn_new_tab"
            app:layout_constraintStart_toStartOf="parent"
            tools:itemCount="3"
            tools:listitem="@layout/item_tab" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_new_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:contentDescription="@string/new_tab"
            android:src="@drawable/ic_add"
            android:tint="@color/toolbar_icon"
            app:backgroundTint="@color/secondary"
            app:elevation="1dp"
            app:fabCustomSize="32dp"
            app:maxImageSize="16dp"
            app:borderWidth="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Container for Text Inputs -->
    <LinearLayout
        android:id="@+id/search_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tabs_container">

        <!-- Arama Input 1 -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_input_layout_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:layout_weight="1"
            android:hint="Arama"
            android:theme="@style/ModernEditTextTheme"
            app:boxStrokeColor="@color/primary"
            app:boxStrokeWidth="0.5dp"
            app:boxBackgroundColor="@color/dark_surface"
            app:hintTextColor="@color/text_secondary_dark"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/aramaSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/dark_surface"
                android:padding="2dp"
                android:minHeight="20dp"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:inputType="text"
                android:imeOptions="actionSearch" />
        </com.google.android.material.textfield.TextInputLayout>
        
        <!-- Arama Input 2 (new) -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_input_layout_1_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:layout_weight="1"
            android:hint="Arama"
            android:theme="@style/ModernEditTextTheme"
            app:boxStrokeColor="@color/primary"
            app:boxStrokeWidth="0.5dp"
            app:boxBackgroundColor="@color/dark_surface"
            app:hintTextColor="@color/text_secondary_dark"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/aramaSearch2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/dark_surface"
                android:padding="2dp"
                android:minHeight="20dp"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:inputType="text"
                android:imeOptions="actionSearch" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Divider 1 -->
        <View
            android:id="@+id/divider_1"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/primary"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp" />
        
        <!-- QR No Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_input_layout_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:layout_weight="1"
            android:hint="QR No"
            android:theme="@style/ModernEditTextTheme"
            app:boxStrokeColor="@color/primary"
            app:boxStrokeWidth="0.5dp"
            app:boxBackgroundColor="@color/dark_surface"
            app:hintTextColor="@color/text_secondary_dark"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/qrNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/dark_surface"
                android:padding="2dp"
                android:minHeight="20dp"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:inputType="number"
                android:imeOptions="actionSearch" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Divider 2 -->
        <View
            android:id="@+id/divider_2"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/primary"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp" />
        
        <!-- SR No Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_input_layout_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:layout_weight="1"
            android:hint="SR No"
            android:theme="@style/ModernEditTextTheme"
            app:boxStrokeColor="@color/primary"
            app:boxStrokeWidth="0.5dp"
            app:boxBackgroundColor="@color/dark_surface"
            app:hintTextColor="@color/text_secondary_dark"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/srNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/dark_surface"
                android:padding="2dp"
                android:minHeight="20dp"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:inputType="text"
                android:imeOptions="actionSearch" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <!-- WebView container - FitsSystemWindows true, klavye için düzeltilmiş -->

    <FrameLayout
        android:id="@+id/webview_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/dark_surface"
        android:fitsSystemWindows="true"
        android:clipToPadding="false"
        android:layout_marginTop="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_container" />

    <!-- Loading progress bar - Dark Theme colors -->
    <ProgressBar
        android:id="@+id/progress_bar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:visibility="gone"
        android:progressTint="@color/primary"
        android:progressBackgroundTint="@color/dark_surface"
        android:translationZ="4dp"
        android:elevation="5dp"
        app:layout_constraintTop_toTopOf="@id/webview_container"
        tools:progress="50"
        tools:visibility="visible" />

    <!-- Action Buttons Container -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_container">

        <!-- Left Action Buttons -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/left_buttons_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|bottom"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="8dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="28dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_left_1"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:layout_marginBottom="8dp"
                    android:backgroundTint="@android:color/transparent"
                    android:contentDescription="Ekipman Listesi"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    app:cornerRadius="31dp"
                    app:elevation="0dp"
                    app:icon="@drawable/ic_equipment_modern"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconSize="32dp"
                    app:iconTint="@null" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_left_2"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:backgroundTint="@android:color/transparent"
                    android:contentDescription="Kontrol Listesi"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    app:cornerRadius="31dp"
                    app:elevation="0dp"
                    app:icon="@drawable/ic_control_modern"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconSize="32dp"
                    app:iconTint="@null"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_scope_out"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:backgroundTint="@android:color/transparent"
                    android:contentDescription="Kapsam Dışı"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    app:cornerRadius="31dp"
                    app:elevation="0dp"
                    app:icon="@drawable/ic_close_circle"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconSize="32dp"
                    app:iconTint="@color/primary" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Right Action Buttons -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/right_buttons_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="8dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="28dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_right_top"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:layout_marginBottom="8dp"
                    android:backgroundTint="@android:color/transparent"
                    android:contentDescription="Cihaz Ekle"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    app:cornerRadius="31dp"
                    app:elevation="0dp"
                    app:icon="@drawable/ic_add_device_modern"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconSize="32dp"
                    app:iconTint="@null" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_qr"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:backgroundTint="@android:color/transparent"
                    android:contentDescription="QR Tarama"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    app:cornerRadius="31dp"
                    app:elevation="0dp"
                    app:icon="@drawable/ic_qr_code_modern"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconSize="32dp"
                    app:iconTint="@null" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>



</androidx.constraintlayout.widget.ConstraintLayout>